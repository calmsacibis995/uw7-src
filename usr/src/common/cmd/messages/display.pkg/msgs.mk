# display package message catalog makefile
#ident	"@(#)messages:common/cmd/messages/display.pkg/msgs.mk	1.1"

include $(CMDRULES)

PKG=display
CATALOG=$(PKG).pkg.str
MSGDIR=$(USRLIB)/locale/C/MSGFILES

all: msgs

install: all 
	cp msgs $(CATALOG)
	[ -d $(MSGDIR) ] || mkdir -p $(MSGDIR)
	$(INS) -f $(MSGDIR) -m 644 $(CATALOG)

clean :
	rm -f $(CATALOG)
