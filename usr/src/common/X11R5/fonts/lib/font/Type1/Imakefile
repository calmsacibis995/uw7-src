#ident	"@(#)r5fonts:lib/font/Type1/Imakefile	1.3"

XCOMM $XConsortium: Imakefile,v 1.4 91/10/10 11:13:21 rws Exp $

#include <Server.tmpl>

#if SharedFontLibraries
#define DoSharedLib	YES
#include <Library.tmpl>
#include <sv4Lib.tmpl>
EXTRA_DEFINES = -KPIC
#endif

INCLUDES = -I$(FONTSRC)/lib/font/include \
	   -I$(FONTSRC)/include  \
	   -I$(FONTSRC)/../include \
	   -I$(FONTSRC)/../.

SRCS =          \
       arith.c         \
       curves.c        \
       fontfcn.c       \
       hints.c         \
       lines.c         \
       objects.c       \
       paths.c         \
       regions.c       \
       scanfont.c      \
       spaces.c        \
       t1funcs.c       \
       t1info.c        \
       t1io.c          \
       t1malloc.c      \
       t1snap.c        \
       t1stub.c       \
       token.c         \
       type1.c         \
       util.c

OBJS =          \
       arith.o         \
       curves.o        \
       fontfcn.o       \
       hints.o         \
       lines.o         \
       objects.o       \
       paths.o         \
       regions.o       \
       scanfont.o      \
       spaces.o        \
       t1funcs.o       \
       t1info.o        \
       t1io.o          \
       t1malloc.o      \
       t1snap.o        \
       t1stub.o       \
       token.o         \
       type1.o         \
       util.o

SubdirLibraryRule($(OBJS))
NormalLibraryObjectRule()
NormalLintTarget($(SRCS))

#if SharedFontLibraries
SharedLibraryTarget2(Type1,$(OBJS),.,.)
#else
NormalLibraryTarget(Type1,$(OBJS))
#endif
InstallSharedLibrary1(libType1.so,$(USRLIBDIR))

DependTarget()
